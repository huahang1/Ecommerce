<% layout('layout') -%>

<div class="row">
    <div class="col-lg-6 col-md-offset-3">

        <!--use email address(because email address is unique) to let only admin to add category-->
        <% if(typeof user === 'undefined'){ %>
        <h3>Please login first:
        <a href="/login" class="btn btn-warnning btn-lg">Click here to login</a>
        </h3>
            <%} else { %>
                <% if(user.email === 'chris1@gmail.com') {%>
                    <% if(message.length > 0) { %>
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismmiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%= message %>
                    </div>

                    <% } %>

                    <form method="post">

                        <h1>Add a new Category</h1>

                        <div class="form-group">
